     apply (wpsimp wp: handle_interrupt_cur_sc_in_release_q_imp_zero_consumed)
        apply (strengthen valid_sched_active_sc_valid_refills valid_sched_valid_release_q)
        apply (wpsimp wp: hoare_drop_imp hoare_vcg_all_lift
