     apply (erule ct_runnable_ct_not_blocked)
     apply (clarsimp simp: current_time_bounded_def)+
     done

   apply (wpsimp wp: check_budget_restart_if_lift
                     update_timestamp_cur_sc_in_release_q_imp_zero_consumed)
